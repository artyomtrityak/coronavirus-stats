{
  "compilerOptions": {
      "outDir": "./.junk/",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true, // included in strict: true
      "noImplicitThis": true, // included in strict: true
      "alwaysStrict": true, // included in strict: true
      "strictNullChecks": true, // included in strict: true
      "strictFunctionTypes": true, // included in strict: true
      "strictPropertyInitialization": true, // included in strict: true
      "resolveJsonModule": true,
      "module": "commonjs",
      "target": "esnext",
      "jsx": "react",
      "moduleResolution": "node",
      //"allowJs": true,
      //"noEmit": true,
      "isolatedModules": false,
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "dist/",
  },
  "include": [
      "typed",
      "public/src/index.tsx"
  ]
}